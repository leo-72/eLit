<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.fragment.AddBooksFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="135dp"
                android:layout_height="200dp"
                style="@style/customCardView">

                <ImageView
                    android:id="@+id/image_books"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/iv_books_image"
                    tools:srcCompat="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textAlignment="center"
                    android:text="@string/filename_pdf"
                    android:textColor="@color/colorHint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="14sp"
                    android:maxLines="4"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btn_select_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/select_pdf"
                    style="@style/CustomButton"/>
                <Button
                    android:id="@+id/btn_select_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/tv_select_image"
                    style="@style/CustomButton"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_book_title"
                app:startIconDrawable="@drawable/ic_title"
                app:startIconTint="@color/second_color"
                style="@style/customTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/customTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_book_author"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_author"
                app:startIconTint="@color/second_color"
                style="@style/customTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_book_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/customTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_book_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_book_desc"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_desc"
                app:startIconTint="@color/second_color"
                style="@style/customTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_book_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    style="@style/customTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_book_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_genre"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/ic_genre"
                app:startIconTint="@color/second_color"
                style="@style/customTextInputLayoutDropDown">

                <AutoCompleteTextView
                    android:id="@+id/et_book_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    style="@style/customTextInputEditText"
                    tools:ignore="LabelFor" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.android.elit.ui.customview.ButtonUploadBook
                android:id="@+id/btn_upload_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/CustomButton"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>